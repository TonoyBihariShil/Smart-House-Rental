<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="35dp"
                android:src="@drawable/avatar"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/name"
                android:text="Kamrul Hasan"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/postImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/area"
                android:textColor="#936900"
                android:layout_weight="1"
                android:text="Area: Shukrabad"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/type"
                android:gravity="end"
                android:textColor="#936900"
                android:layout_weight="1"
                android:text="type: Family"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/address"
                android:textColor="#9e032c"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price"
                android:textColor="#9e032c"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/details"
            android:text="dummu dfgslk kbn dfj afkdjfs;m"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/distance"
                android:textColor="#9e032c"
                android:layout_weight="1"
                android:text="Distance: 2 KM"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/time"
                android:textColor="#9e032c"
                android:gravity="end"
                android:layout_weight="1"
                android:text="Time: 15min"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/comments_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/commentImage"
                android:layout_marginTop="2dp"
                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_comment"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/comments"
                android:layout_toEndOf="@+id/commentImage"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="0 Comments"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/directionImage"
                android:src="@mipmap/ic_direction"
                android:layout_alignParentEnd="true"
                android:layout_width="35dp"
                android:layout_height="35dp" />

        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>